{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Stackify",
      "Serilog.Sinks.ApplicationInsights"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "ApplicationInsights",
              "Args": {
                "restrictedToMinimumLevel": "Debug",
                "telemetryConverter": "Serilog.Sinks.ApplicationInsights.TelemetryConverters.TraceTelemetryConverter, Serilog.Sinks.ApplicationInsights"
              }
            },
            {
              "Name": "Console",
              "Args": {
                "restrictedToMinimumLevel": "Debug",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {MethodName} - {Message:lj}{NewLine}{Exception}"
              },
              "Filter": [
                {
                  "Name": "ByIncludingOnly",
                  "Args": {
                    "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore.Database.Command')"
                  }
                }
              ]
            },
            {
              "Name": "Stackify",
              "Args": {
                "restrictedToMinimumLevel": "Debug",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext} {MethodName} - {Message:lj}{NewLine}{Exception}"
              },
              "Filter": [
                {
                  "Name": "ByIncludingOnly",
                  "Args": {
                    "expression": "StartsWith(SourceContext, 'Microsoft.EntityFrameworkCore.Database.Command')"
                  }
                }
              ]
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName"
    ]
  },
  "Stackify": {
    "AppName": "CustomerValidationSystem",
    "ApiKey": "",
    "Environment": "Development"
  },
  "ReqresApi": {
    "BaseUrl": "https://reqres.in",
    "ApiKey": "reqres_5e7b3102c0ef4537bb00f95a52aedc01"
  }
}
